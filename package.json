{
  "name": "@yozora/root",
  "version": "0.0.0",
  "description": "render md data in react",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/yozora-react.git"
  },
  "homepage": "https://github.com/guanghechen/yozora-react/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn format && yarn test && lerna publish",
    "start": "lerna run --parallel start",
    "build": "lerna run --concurrency 1 build",
    "rebuild": "yarn clean && yarn build",
    "test": "lerna run --parallel test",
    "test:fix": "lerna exec --parallel 'yarn test -u'",
    "clean": "lerna clean --yes && yarn install",
    "format": "yarn find-inconsistent && yarn sort-imports && yarn lint:fix",
    "lint:fix": "lerna run --parallel lint:fix",
    "find-inconsistent": "barusu-find-inconsistent .",
    "sort-imports": "barusu-sort-imports ."
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "styled-components": "5.2.1"
  },
  "devDependencies": {
    "@barusu-react/eslint-config": "^0.0.19",
    "@barusu-react/rollup-config": "^0.0.19",
    "@barusu/tool-find-inconsistent": "^0.0.43",
    "@barusu/tool-sort-imports": "^0.0.43",
    "@types/enzyme": "3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "26.0.19",
    "@types/node": "^13.13.30",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/react-mathjax": "^1.0.0",
    "@types/react-router-dom": "^5.1.6",
    "@types/styled-components": "^5.1.4",
    "cross-env": "~7.0.3",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.5",
    "enzyme-to-json": "^3.6.1",
    "jest": "26.6.3",
    "jest-styled-components": "7.0.3",
    "lerna": "^4.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-is": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "rimraf": "~3.0.2",
    "rollup": "2.35.1",
    "styled-components": "^5.2.1",
    "ts-jest": "26.4.4",
    "ts-node": "~9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "~4.1.3"
  },
  "@barusu/tool-sort-imports": {
    "logLevel": "verbose",
    "pattern": [
      "packages/*/{src,__test__}/**/*.{ts,tsx}",
      "!**/{__test__}/cases",
      "!**/node_modules/"
    ],
    "moduleRanks": [
      {
        "regex": "^(react|vue|angular)(?:[/\\-][\\w\\-./]*)?$",
        "rank": 1.1
      },
      {
        "regex": "^mocha|chai(?:[/][\\w\\-./]*)?$",
        "rank": 1.2
      },
      {
        "regex": "^[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.3
      },
      {
        "regex": "^@[a-zA-Z\\d][\\w\\-.]*\\/[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.4
      },
      {
        "regex": "^@\\/[^\\n]*\\.(css|styl)$",
        "rank": 2.2
      },
      {
        "regex": "^@\\/",
        "rank": 2.1
      },
      {
        "regex": "^[.][\\/\\\\][^\\n]*\\.(css|styl)$",
        "rank": 3.4
      },
      {
        "regex": "^(?:\\/|[a-zA-Z]:)",
        "rank": 3.1
      },
      {
        "regex": "^[.]{2}[\\/\\\\][^\\n]*",
        "rank": 3.2
      },
      {
        "regex": "^[.][\\/\\\\][^\\n]*",
        "rank": 3.3
      }
    ],
    "indent": "  ",
    "quote": "'",
    "semicolon": false,
    "maxColumn": 80
  }
}
